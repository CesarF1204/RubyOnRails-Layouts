<% content_for :left_column do %>
<h1>All Posts</h1>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.user.first_name %> <%= post.user.last_name %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<% end %>

<% content_for :middle_column do %>
<h1>New Post</h1>
<form action="/post/create" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group mb-2">
        <input type="text" class="form-control form-control-lg" name="title" placeholder="Title">
    </div>
    <div class="form-group mb-2">
        <input type="text" class="form-control form-control-lg" name="content" placeholder="Content">
    </div>
    <div class="form-group mb-2">
        <select name="user_id" class="form-control form-select">
            <% @users.each do |user| %>
            <option value="<%= user.id %>">
                <%= user.first_name %> <%= user.last_name %>
            </option>
            <% end %>
        </select>
    </div>
    <div class="form-group mb-5">
        <input type="submit" class="btn btn-primary btn-block" value="Submit">
    </div>
</form>
<% end %>

<% content_for :right_column do %>
<h1>Go to Users Page</h1>
<a href="/users" class="btn btn-info text-white">All Users</a>
<% end %>